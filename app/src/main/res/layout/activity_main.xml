<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thanakritjinjai.mooapp.MainActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/c1"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        app:srcCompat="@drawable/moo" />

    <Button
        android:id="@+id/a1"
        android:layout_width="109dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignStart="@+id/c1"
        android:text="A"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="78dp" />

    <Button
        android:id="@+id/c1"
        android:layout_width="109dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:layout_marginStart="50dp"
        android:text="C"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="153dp" />

    <Button
        android:id="@+id/d1"
        android:layout_width="109dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/b1"
        android:layout_below="@+id/imageView6"
        android:text="D"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="228dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="109dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_marginStart="50dp"
        android:layout_toEndOf="@+id/a1"
        android:text="B"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp" />

</RelativeLayout>
